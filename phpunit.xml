<?xml version="1.0" encoding="UTF-8"?>

<!-- http://phpunit.de/manual/4.1/en/appendixes.configuration.html -->
<phpunit backupGlobals="false"
         colors="true">
    <testsuites>
        <testsuite name="mysqli connection unit tests">
            <file>tests/connection/mysqli/MysqliStatementTest.php</file>
            <file>tests/connection/mysqli/MysqliConnectionTest.php</file>
        </testsuite>
        <testsuite name="connection functional tests">
            <file>tests/connection/MysqliFunctionalConnectionTest.php</file>
            <file>tests/connection/PDOFunctionalConnectionTest.php</file>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-text" target="coverage.txt" lowUpperBound="35"
             highLowerBound="70"/>
    </logging>
    <filter>
        <whitelist>
            <directory>connection</directory>
        </whitelist>
    </filter>
</phpunit>
